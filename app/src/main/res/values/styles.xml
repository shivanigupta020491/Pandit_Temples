<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="buttonTheme1" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">@dimen/padding_10</item>
    </style>

    <style name="buttonTheme2" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">@dimen/padding_10</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:textSize">16sp</item>
        <item name="colorControlNormal">@color/colorBlack</item>
        <!--        <item name="android:textColorPrimary">#A3FFFFFF</item>-->
        <!--        <item name="android:textColorSecondary">@color/colorWhite</item>-->
        <!--        <item name="colorOnPrimary">#A3FFFFFF</item>-->

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

        <item name="android:homeAsUpIndicator">@drawable/ic_drawer</item>
    </style>
</resources>