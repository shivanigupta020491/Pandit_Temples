<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">


    <include
        layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="Temple Name "
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="* "
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/templeName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/gray_border"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ123456789 _"
        android:hint="Temple Name"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:paddingBottom="7dp"
        android:singleLine="true"
        android:layout_marginTop="@dimen/padding_5"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/text_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="Temple Location "
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="* "
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/templeLocation"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/gray_border"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ123456789 _"
        android:hint="Temple Location"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:paddingBottom="7dp"
        android:layout_marginTop="@dimen/padding_5"
        android:singleLine="true"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/text_16" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="Temple Activity "
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="* "
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/templeActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10"
        android:background="@drawable/gray_border"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ123456789 _"
        android:hint="Temple Activity"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:paddingBottom="7dp"
        android:layout_marginTop="@dimen/padding_5"
        android:singleLine="true"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/text_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="Date Of Activity "
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="* "
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setDateBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/padding_5"
        android:background="@drawable/gray_border"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_baseline_event_note_24"
            app:tint="@color/colorBlack" />

        <TextView
            android:id="@+id/dateText"
            style="?android:labelTextSize"
            android:layout_width="202dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:hint="Thursday,July 9"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_16" />


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        android:background="#000000"
        android:elevation="4dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">


        <TextView
            android:id="@+id/submitTempleBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:theme="@style/buttonTheme2"
            android:text="@string/submit"
            />

    </androidx.cardview.widget.CardView>

</LinearLayout>

</LinearLayout>