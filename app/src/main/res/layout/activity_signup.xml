        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#000000"
            android:elevation="4dp"
            app:cardCornerRadius="5dp">


            <ImageView
                android:id="@+id/logo"
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/pandit"
                android:transitionName="logo_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="120dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="sans-serif-light"
                    android:includeFontPadding="false"
                    android:padding="5dp"
                    android:text="Create New Account"
                    android:textAlignment="center"
                    android:textColor="#666"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:transitionName="logo_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Select"
                    android:textAlignment="center"
                    android:textColor="#666"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:id="@+id/organizationTypeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/gray_border"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:padding="2dp"
                        android:text="Organization Name"
                        android:textAlignment="center"
                        android:textColor="#666"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/gray_border"
                        android:paddingLeft="10dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/organizationNameSignUp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ123456789 _"
                            android:hint="Enter Name"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="5dp"
                            android:paddingBottom="7dp"
                            android:singleLine="true"
                            android:textColor="@color/colorGrey"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:padding="2dp"
                        android:text="Email Id"
                        android:textAlignment="center"
                        android:textColor="#666"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/gray_border"
                        android:paddingLeft="10dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/organizationEmailSignUp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789@. _"
                            android:hint="Enter id"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="5dp"
                            android:paddingBottom="7dp"
                            android:singleLine="true"
                            android:textColor="@color/colorGrey"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/userNameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="2dp"
                        android:text="User Name"
                        android:textAlignment="center"
                        android:textColor="#666"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/userNameET"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/gray_border"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ123456789 _"
                        android:hint="Enter Name"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="10dp"
                        android:paddingBottom="7dp"
                        android:singleLine="true"
                        android:textColor="@color/colorGrey"
                        android:textSize="16sp"
                        android:transitionName="username_tran" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:text="Contact No"
                    android:textColor="#666"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/userContactET"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/gray_border"
                    android:digits="1234567890"
                    android:hint="Enter Contact No."
                    android:maxLength="10"
                    android:paddingLeft="10dp"
                    android:paddingBottom="7dp"
                    android:singleLine="true"
                    android:textColor="@color/colorGrey"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:text="Email Address"
                    android:textColor="#666"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/userEmailET"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/gray_border"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890@_."
                    android:hint="Enter Email"
                    android:paddingLeft="10dp"
                    android:paddingBottom="7dp"
                    android:singleLine="true"
                    android:textColor="@color/colorGrey"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:text="Address"
                    android:textColor="#666"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/userAddressET"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/gray_border"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890@_."
                    android:hint=" Enter Address"
                    android:paddingLeft="10dp"
                    android:paddingBottom="7dp"
                    android:singleLine="true"
                    android:textColor="@color/colorGrey"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:text="City"
                    android:textColor="#666"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/userCityET"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/gray_border"
                    android:digits="1234567890"
                    android:hint="Enter City."
                    android:maxLength="10"
                    android:paddingLeft="10dp"
                    android:paddingBottom="7dp"
                    android:singleLine="true"
                    android:textColor="@color/colorGrey"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:text="Password"
                    android:textColor="#666"
                    android:textSize="16sp"
                    android:textStyle="bold" />




                <EditText
                    android:id="@+id/userStateET"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/gray_border"
                    android:digits="1234567890"
                    android:hint="Enter Contact No."
                    android:maxLength="10"
                    android:paddingLeft="10dp"
                    android:paddingBottom="7dp"
                    android:singleLine="true"
                    android:textColor="@color/colorGrey"
                    android:textSize="16sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:text="Password"
                    android:textColor="#666"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/passwordSignup"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/gray_border"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:paddingBottom="7dp"
                    android:singleLine="true"
                    android:textColor="@color/colorGrey"
                    android:textSize="16sp"
                    app:counterMaxLength="15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:text="Confirm Password"
                    android:textColor="#666"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/confirmPasswordSignup"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/gray_border"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:paddingBottom="7dp"
                    android:singleLine="true"
                    android:textColor="@color/colorGrey"
                    android:textSize="16sp" />


                <Button
                    android:id="@+id/userRegisterBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorBlack"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="Sign Up"
                    android:textColor="#ffff"
                    android:transitionName="button_tran" />

                <!--                    <TextView-->
                <!--                        android:layout_width="wrap_content"-->
                <!--                        android:layout_height="wrap_content"-->
                <!--                        android:padding="10dp"-->
                <!--                        android:textAlignment="center"-->
                <!--                        android:text="Sign Up"-->
                <!--                        android:textColor="#ffff"-->
                <!--                        android:textSize="20dp" />-->

                <!--                </Button>-->
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/signInLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@+id/card"
            android:gravity="center"
            android:transitionName="login_signup_tran"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:text="You have already account? "
                android:textColor="#65000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/loginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:text="Sign In"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />
            <!--        920091EA-->
        </LinearLayout>
    </RelativeLayout>

</ScrollView>
